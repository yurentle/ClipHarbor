{
  "name": "ClipHarbor",
  "private": true,
  "version": "0.3.1",
  "license": "MIT",
  "description": "A modern clipboard manager for macOS, Windows and Linux",
  "author": {
    "name": "yurentle",
    "email": "yurentle@gmail.com"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.electron.json && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "build": {
    "appId": "io.github.yurentle.ClipHarbor",
    "productName": "ClipHarbor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "electron/preload.js"
    ],
    "extraResources": [
      {
        "from": "build/icons",
        "to": "icons",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icons/logo.icns",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icons/logo.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icons",
      "category": "Utility",
      "maintainer": "yurentle <yurentle@gmail.com>",
      "description": "A modern clipboard manager for macOS, Windows and Linux"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": {
      "smartUnpack": true
    },
    "asarUnpack": [
      "node_modules/electron-store/**/*"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@mantine/core": "^7.14.3",
    "@mantine/hooks": "^7.14.3",
    "@mantine/notifications": "^7.14.3",
    "@octokit/rest": "^21.1.1",
    "@types/uuid": "^10.0.0",
    "dayjs": "^1.11.13",
    "electron-store": "^10.0.1",
    "nanoid": "^5.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.0.1",
    "tabler-icons-react": "^1.56.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-plugin-electron": "^0.29.0"
  }
}
